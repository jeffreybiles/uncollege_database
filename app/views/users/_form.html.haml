= simple_form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field= f.input :name
  .field= f.input :email
  .field= f.input :password
  .field= f.input :password_confirmation
  .field= f.input :city
  .field= f.input :college
  .field= f.input :job
  .actions
    = f.submit 'Save'
